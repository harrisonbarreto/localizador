function compartirUbicacion() {
  if ("geolocation" in navigator) {
    navigator.geolocation.getCurrentPosition(function(position) {
      const lat = position.coords.latitude;
      const lon = position.coords.longitude;

      document.getElementById("ubicacion").innerHTML =
        `Tu ubicaci칩n es:<br>Latitud: ${lat}<br>Longitud: ${lon}`;
    }, function(error) {
      document.getElementById("ubicacion").innerText = "Error al obtener ubicaci칩n.";
    });
  } else {
    document.getElementById("ubicacion").innerText = "La geolocalizaci칩n no est치 disponible.";
  }
}
